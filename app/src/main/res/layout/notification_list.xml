<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="49dp"
        android:layout_height="91dp"
        android:layout_marginVertical="3dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="220dp"
        android:contentDescription="@string/book_image"
        app:srcCompat="@drawable/add_24"
        tools:srcCompat="@drawable/ic_notifications_black_24dp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/imageView"
        android:maxLines="2"
        android:text="A Notification from buyer"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bookname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/imageView"
        android:maxLines="2"
        android:text="@string/bookname"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookname"
        android:layout_alignStart="@+id/bookname"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:text="Username"
        android:textColor="@color/theme"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/line_6"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/UserName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@color/gray"
        android:layout_marginTop="16dp" />
    <View
        android:id="@+id/line_7"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/line_6"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@color/gray"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserName"
        android:layout_alignStart="@+id/bookname"
        android:layout_marginStart="287dp"
        android:layout_marginTop="-80dp"
        android:maxLines="1"
        android:text="@string/date"
        android:textSize="14sp" />
</RelativeLayout>